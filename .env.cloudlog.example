# Cloudlog production example (OCI VM)
# Copy this file to .env.cloudlog and update values before first deploy.

# Public domain for HTTPS (Let's Encrypt)
DOMAIN=cloudlog.showashokai.com

# Required security settings
CLOUDLOG_SECRET_KEY=CHANGE_ME_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
CLOUDLOG_HTTPS_ONLY=1
CLOUDLOG_ALLOWED_HOSTS=cloudlog.showashokai.com,161.33.193.237,localhost,127.0.0.1
CLOUDLOG_TRUSTED_PROXIES=*

# Session / Remember-me
CLOUDLOG_SESSION_MAX_AGE_SECONDS=43200
CLOUDLOG_REMEMBER_MAX_AGE_DAYS=30

# Storage backend
# google_sheets (production) or memory (local smoke)
CLOUDLOG_STORAGE=google_sheets
GOOGLE_SHEETS_SPREADSHEET_ID=CHANGE_ME_SPREADSHEET_ID
# Option A: set a mounted credentials file path
GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/google_service_account.json
# Option B: set service account json as base64 (entrypoint-less mode)
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=

# Bootstrap admin (used only when Users tab is empty)
CLOUDLOG_BOOTSTRAP_ADMIN_EMAIL=admin@example.com
CLOUDLOG_BOOTSTRAP_ADMIN_NAME=Admin
CLOUDLOG_BOOTSTRAP_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Runtime tuning
CLOUDLOG_WORKERS=2
CLOUDLOG_LOG_LEVEL=info
CLOUDLOG_TIMEOUT=60
TZ=Asia/Tokyo
