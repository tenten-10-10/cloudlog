# Cloudlog production example (OCI VM)
# Copy this file to .env.cloudlog and update values before first deploy.

# Public domain for HTTPS (Let's Encrypt)
DOMAIN=clouddog.showashokai.com

# Initial bootstrap admin (created only if user does not exist)
CLOUDLOG_ADMIN_USER=admin
CLOUDLOG_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Required security settings
CLOUDLOG_SECRET_KEY=CHANGE_ME_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
CLOUDLOG_ALLOW_REGISTRATION=0
CLOUDLOG_HTTPS_ONLY=1
# Must include production domain and local checks
CLOUDLOG_ALLOWED_HOSTS=clouddog.showashokai.com,155.248.164.205,localhost,127.0.0.1
# Trust reverse proxy headers from Caddy
CLOUDLOG_TRUSTED_PROXIES=*

# Runtime tuning
CLOUDLOG_WORKERS=2
CLOUDLOG_LOG_LEVEL=info
CLOUDLOG_TIMEOUT=60
TZ=Asia/Tokyo

# Internal container data path (do not change unless needed)
CLOUDLOG_DATA_DIR=/data
