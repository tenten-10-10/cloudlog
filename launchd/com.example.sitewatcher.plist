<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.example.sitewatcher</string>

    <key>ProgramArguments</key>
    <array>
      <!-- Change these paths to your environment -->
      <string>/ABSOLUTE/PATH/TO/PROJECT/.venv/bin/python3</string>
      <string>-m</string>
      <string>sitewatcher</string>
      <string>run</string>
      <string>--config</string>
      <string>/ABSOLUTE/PATH/TO/PROJECT/config.yaml</string>
      <string>--once</string>
    </array>

    <!-- Run every 5 minutes -->
    <key>StartInterval</key>
    <integer>300</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/sitewatcher.out.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/sitewatcher.err.log</string>
  </dict>
</plist>

